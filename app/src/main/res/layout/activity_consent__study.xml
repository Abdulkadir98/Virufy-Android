<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40sp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="30"
            android:layout_marginLeft="16sp"
            android:text="Consent to the study"
            android:textColor="#000"
            android:textSize="31sp" />

        <!--Just an empty RelativeLayout to provide some spacing-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="30">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:layout_marginTop="15sp"
            android:layout_marginRight="16sp"
            android:textSize="19sp"
            android:text="We care about privacy. We are advised by licensed data privacy experts and will anonymize all information and recordings."
            android:textColor="#111" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16sp"
            android:layout_marginRight="16sp"
            android:layout_marginTop="15sp"
            android:textSize="19sp"
            android:text="Do you consent to participating in this research? Please read the consent form."
            android:textColor="#111" />

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="26sp"
        android:layout_marginRight="26sp"
        android:layout_marginBottom="65sp"
        android:layout_weight="40"
        app:cardBackgroundColor="#1890FF"
        app:cardCornerRadius="15sp">

        <Button
            android:id="@+id/next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1890FF"
            android:text="@string/i_agree_btn_txt"
            android:textAllCaps="false"
            android:textColor="#fff"
            android:textSize="19sp" />
    </androidx.cardview.widget.CardView>

</RelativeLayout>